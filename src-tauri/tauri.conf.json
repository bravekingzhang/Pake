{
  "package": {
    "productName": "hzChatGpt",
    "version": "1.0.0"
  },
  "tauri": {
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "systemTray": {
      "iconPath": "png/chatgpt_512.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": true,
      "http": {
        "scope": ["http://**", "https://**"]
      }
    }
  },
  "build": {
    "withGlobalTauri": true,
    "devPath": "../dist",
    "distDir": "../dist",
    "beforeBuildCommand": "",
    "beforeDevCommand": ""
  }
}
